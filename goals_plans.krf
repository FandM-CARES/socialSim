(in-microtheory GoalsPlansMt)

;;; Cooperate with the closest hunter within 3 moves
(preconditionForMethod
 (and
      (distanceBetween ?hunter ?hunter2 ?distance)
      (lessThan ?distance 4)
      )
 (methodForAction
  (pickCooperate ?hunter)
  (actionSequence
   (TheList
    (doRemoteAgentPlan
     StagHuntAgent (set_goal ?hunter ?hunter2))
    ))))
